{
  "extends": ["stylelint-config-standard", "stylelint-config-idiomatic-order"],
  "rules": {
    "declaration-empty-line-before": [
      "always",
      {
        "ignore": [
          "after-comment",
          "after-declaration",
          "first-nested",
          "inside-single-line-block"
        ]
      }
    ]
  }
}
